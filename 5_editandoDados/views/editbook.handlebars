                id="nomeLivro"
                name="nomeLivro"
                value="{{book.title}}"
                required
            />
        </div>
        <div>
            <label for="nomeAutor">Nome do Autor</label>
            <input
                type="text"
                id="nomeAutor"
                name="nomeAutor"
                value="{{book.author}}"
                required
            />
        </div>
